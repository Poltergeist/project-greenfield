{
  "name": "project-greenfield",
  "version": "0.0.1",
  "description": "This is a tech demo and playground of my current and future tech stack.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build/*",
    "clean:dist": "rm -rf dist/*",
    "mkdirs": "mkdir -p build/{scripts,styles}",
    "mkdirs:dist": "mkdir -p dist/{scripts,styles}",
    "prepare": "npm run clean && npm run mkdirs",
    "test": "NODE_ENV=test mocha --compilers js:babel-register --slow 1 --recursive test/",
    "jade": "jade src/jade/*.jade -o build/",
    "stylus": "stylus src/stylus/main.styl -o build/styles",
    "stylus:dev": "npm run stylus -- --sourcemap-inline",
    "server": "npm run prepare && npm run prepare:assets && browser-sync start --config bs-config.js",
    "dev": "npm run prepare && npm run watch & npm run server",
    "prepare:assets": "npm run jade && npm run stylus:dev",
    "jade:watch": "nodemon --exec 'npm run jade' -w src/jade -e jade",
    "stylus:watch": "nodemon --exec 'npm run stylus:dev' --watch src/stylus -e styl",
    "js:dev": "browserify src/js/main.js --debug -t [ babelify --presets [ es2015 react ] ] > build/scripts/main.js",
    "js:watch": "nodemon --exec 'npm run js:dev' --watch src/js -e js",
    "watch": "npm run jade:watch & npm run stylus:watch & npm run js:watch"
  },
  "author": "sp3c1",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "enzyme": "^1.6.0",
    "jade": "^1.11.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.8.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "stylus": "^0.53.0",
    "unexpected": "^10.8.1",
    "unexpected-react": "^0.5.2"
  },
  "dependencies": {
    "markdown-react-js": "^0.3.0",
    "pouchdb": "^5.3.0",
    "react-redux": "^4.4.0",
    "redux": "^3.3.1",
    "redux-pouchdb": "0.0.7",
    "redux-thunk": "^1.0.3"
  }
}
